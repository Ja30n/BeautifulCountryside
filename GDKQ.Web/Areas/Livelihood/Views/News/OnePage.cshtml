@model GDKQ.Model.News
@{
}

<link href="/Content/Livelihood/css/notice.css" rel="stylesheet" type="text/css" media="all" />
<link href="/Content/Livelihood/css/content.css" rel="stylesheet" type="text/css" media="all" />
<div class="middle">
    <div class="midleft">
        <p class="navbox">您的当前位置：<a href="/Livelihood/News/List?bh=@Model.bh">@ViewBag.Title</a>><a href="/Livelihood/News/OnePage?id=@Model.ID">正文</a></p>
        <div class="dy_list clearfix">
            <table width="1100px" border="0" cellspacing="0" cellpadding="0" align="center" bgcolor="#FFFFFF">
                <tbody>
                    <tr>
                        <td valign="top" style="padding:0px 60px 10px 60px;">
                            <div id="title"> @Model.Title </div>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0" align="center">
                                <tbody>
                                    <tr>
                                        <td style="font-size:12px; color:#999; line-height:24px; padding-top:10px;" height="24" align="center">日期：@Model.CreateTime.ToString("yyyy-MM-dd")  编辑：@Model.Author  </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="padding:20px;">
                                <tbody>
                                    <tr>
                                        <td style="font-size:16px; line-height:32px;padding-top:20px;">
                                            <div id="zoom">
                                                @Html.Raw(Model.Body)
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>          

